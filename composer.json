{
    "name": "gemvc/stcms",
    "description": "A lightweight, static-like PHP website with clean architecture and multi-language support.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "symfony/cache": "^7.0",
        "symfony/dotenv": "^7.0",
        "symfony/console": "^7.0",
        "symfony/filesystem": "^7.0",
        "guzzlehttp/guzzle": "^7.0",
        "twig/twig": "^3.0"
    },
    "suggest": {
        "ext-apcu": "Allows use of APCu for in-memory caching (recommended for best performance)"
    },
    "autoload": {
        "psr-4": {
            "Gemvc\\Stcms\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Ali Khorsandfard",
            "email": "ali.khorsandfard@gmail.com"
        }
    ],
    "minimum-stability": "stable"
}
