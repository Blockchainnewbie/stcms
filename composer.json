{
    "name": "gemvc/stcms",
    "description": "A simple CMS core based on GEMVC.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=8.2",
        "twig/twig": "^3.0",
        "symfony/console": "^7.0",
        "symfony/filesystem": "^7.0",
        "symfony/dotenv": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Gemvc\\Stcms\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Ali Khorsandfard",
            "email": "ali.khorsandfard@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "bin": [
        "bin/stcms"
    ],
    "archive": {
        "exclude": [
            "/.git",
            "/.github",
            "/.vscode"
        ]
    }
}